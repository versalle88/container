{
    "name": "versalle/container",
    "description": "A PSR-11: Container interface implementation library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrew Versalle",
            "email": "andrew.versalle@gmail.com"
        }
    ],
    "require": {
        "php": "7.4.* || 8.0.*",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "behat/behat": "^3.0",
        "phpspec/phpspec": "^6.3.0",
        "phpunit/phpunit": "^6.0 || ^7.0 || ^8.0",
        "roave/security-advisories": "dev-master",
        "vimeo/psalm": "^3.11.0 || ^4.0"
    },
    "provide": {
        "psr/container-implementation": "1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Versalle\\Container\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/Fixtures/"
        }
    },
    "config": {
        "platform": {
            "php": "7.2.34"
        },
        "sort-packages": true
    },
    "scripts": {
        "test": [
            "@behat",
            "@phpspec",
            "@psalm"
        ],
        "behat": "behat",
        "phpspec": "phpspec run",
        "psalm": "psalm"
    }
}
